{
  "kind": "collectionType",
  "collectionName": "compras",
  "info": {
    "name": "Purchase"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "code": {
      "type": "string",
      "required": true
    },
    "value": {
      "type": "decimal",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "compras"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "emvalidacao",
        "reprovado",
        "aprovado"
      ],
      "default": "emvalidacao"
    },
    "cashbacks": {
      "via": "purchase",
      "collection": "cashback"
    }
  }
}
